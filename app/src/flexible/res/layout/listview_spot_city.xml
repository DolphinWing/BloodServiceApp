<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_listview_header_height"
    android:background="@color/bloody_donate_date_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:background="@color/listview_donation_date_separator" />

    <TextView
        android:id="@android:id/title"
        style="@style/Theme.Bloody.Widget.Donation.Date"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:drawableEnd="@drawable/ic_stat_expand"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:text="@string/title_section3"
        android:textColor="?android:attr/textColorPrimaryInverse" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:background="@color/listview_donation_date_separator" />
</LinearLayout>